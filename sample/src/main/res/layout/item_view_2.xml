<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

	<android.support.v7.widget.CardView
		android:id="@+id/cardview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		>

		<android.support.constraint.ConstraintLayout
			android:id="@+id/constraintLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="8dp">

			<TextView
				android:id="@+id/addressTV"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="16dp"
				android:layout_marginTop="8dp"
				android:text="307, K.P.Square, 3rd Floor, 100 Feet"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toBottomOf="@+id/locationTypeTV"/>

			<ImageView
				android:id="@+id/pointTV"
				android:layout_width="8dp"
				android:layout_height="8dp"
				android:layout_marginLeft="16dp"
				android:layout_marginTop="0dp"
				android:tint="@color/greeen"
				app:layout_constraintBottom_toBottomOf="@+id/locationTypeTV"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="@+id/locationTypeTV"
				app:srcCompat="@drawable/ic_dot_black_24dp"/>

			<TextView
				android:id="@+id/locationTypeTV"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="8dp"
				android:layout_marginTop="8dp"
				android:text="Deliver to"
				android:textColor="@color/greeen"
				android:textSize="12sp"
				app:layout_constraintStart_toEndOf="@+id/pointTV"
				app:layout_constraintTop_toTopOf="parent"/>
		</android.support.constraint.ConstraintLayout>

		<TextView
			android:id="@+id/c_item_1"
			android:layout_width="30dp"
			android:layout_height="wrap_content"
			android:layout_gravity="end"
			android:gravity="center"
			android:textSize="8sp"
			tools:text="+0"/>

		<TextView
			android:id="@+id/c_item_2"
			android:layout_width="30dp"
			android:layout_height="wrap_content"
			android:layout_gravity="end|bottom"
			android:gravity="center"
			android:textSize="8sp"
			tools:text="-0"/>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_gravity="center"
			android:background="#0f0"
			android:visibility="gone"
			tools:visibility="visible"/>

	</android.support.v7.widget.CardView>

</layout>
